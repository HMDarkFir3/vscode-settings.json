{
  // VSCode Config
  "workbench.colorTheme": "Dracula",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 21,
  "editor.letterSpacing": 1.5,
  "editor.tabSize": 2,
  "explorer.compactFolders": false,
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.folders.associations": {
    "home": "",
    "events": "",
    "settings": "",
    "authentication": "",
    "client": "",
    "movie": "",
    "chat": "",
    "post": "",
    "dtos": "typescript",
    "reducers": "functions",
    "storages": "database",
    "png": "images"
  },
  "editor.renderLineHighlight": "gutter",
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "breadcrumbs.enabled": true,
  "editor.parameterHints.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "window.zoomLevel": -1,
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": true,
  "editor.formatOnSave": true,

  // Terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "JetBrains Mono",

  // Prettier Config
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript, typescript, javascriptreact, typescriptreact, json, graphql, html, vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Auto Close and Rename Tag
  "auto-close-tag.enableAutoCloseTag": true,
  "auto-close-tag.insertSpaceBeforeSelfClosingTag": false,
  "auto-rename-tag.activationOnLanguage": [
    "html",
    "xml",
    "php",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Demais configurações
  "extensions.ignoreRecommendations": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.suggest.autoImports": true,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "json.schemas": [
    {
      "name": "vscode-expo-manifest",
      "url": "file:///c%3A/Users/henri/AppData/Roaming/Code/User/globalStorage/bycedric.vscode-expo/manifest-44.0.0.json",
      "fileMatch": ["app.json", "app.config.json"]
    }
  ]
}
